- content_for(:page_title) do
  %h1 Share New Knowledge

= simple_form_for @post do |f|
  = f.input :title
  = f.input :body
  = f.input :all_tags, label: "Tags", placeholder: "Tags separated with commas"
  - if @post.errors.messages[:all_tags].nil?
    = f.error :all_tags, message: @post.errors.messages[:all_tags]
  = f.button :submit, "Publish Knowledge"
