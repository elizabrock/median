- content_for(:page_title) do
  %h1 Share New Knowledge

= simple_form_for @post, :html => {:multipart => true} do |f|
  = f.input :title
  = f.input :body
  = f.label "Upload an image"
  %span For best results, choose an image that's at least 400 pixels wide and at least 150 pixels tall.
  = f.file_field :image
  = f.button :submit, "Publish Knowledge"
