- content_for(:page_title) do
  %h1= @post.title
  .author
    By:
    = @post.author.name
:markdown
  #{@post.body}

= link_to "Return to #{@post.author.name}'s Knowledgeable", user_posts_path(@post.author)



= if logged_in?
  %hr
  %h3 Leave a comment
  = simple_form_for [@post, Comment.new] do |f|
    = f.input :body
    = f.button :submit, "Publish Comment"

%hr

%div.comments
  %h2 Comments
  - @comments.each do |comment|
    %div.comment
      %div.comment-meta
        = link_to "#{comment.author.name}", root_path
        %span.timestamp= "#{time_ago_in_words(comment.created_at)} ago"
      %p.comment-body= comment.body
      %hr
