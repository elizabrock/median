- unless @user.twitter_nickname?
  = link_to "Link your profile with your Twitter Account", "/auth/twitter"
- else
  %h3 Your posts will be published to Twitter via #{@user.twitter_nickname}

- content_for(:page_title) do
  %h1 #{@user.name}'s Knowledge

%ul
  - @posts.each do |post|
    %li= link_to post.title, user_post_path(post.author, post)

= link_to "< All Contributors", root_path
