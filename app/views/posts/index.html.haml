- content_for(:page_title) do
  %h1 Welcome to #{@user.name}

%div.profile-container
  =gravatar_for @user
  %h2 #{@user.name}
  %p #{@user.bio}
  -if current_user == @user
    =link_to "Edit", edit_user_path

%ul
  - @posts.each do |post|
    %li= link_to post.title, user_post_path(post.author, post)

= link_to "< All Contributors", root_path
